                    mc:Ignorable="d">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ScrollViewer.xaml" />
        <ResourceDictionary Source="NumUpDown.xaml" />
        <ResourceDictionary Source="TabItem.xaml" />
        <ResourceDictionary Source="PropertyGrid.xaml" />
        <ResourceDictionary Source="ComboBox.xaml" />
